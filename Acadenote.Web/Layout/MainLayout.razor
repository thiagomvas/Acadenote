@inherits LayoutComponentBase
@inject AppTheme theme
@inject ColorUtility colors

<div class="container">
    <aside class="sidebar" style="@border">
        <Acadebutton Color="@colors.BackgroundAccent">
            <Acadeicon Color="@colors.Text.Primary" Icon="Acadeicon.IconType.Note" /> Notes
        </Acadebutton>
        <Acadebutton Color="@colors.BackgroundAccent"><Acadeicon Color="@colors.Text.Primary" Icon="Acadeicon.IconType.Hashtag" /> Algorithms & Calculators</Acadebutton>
        <Acadebutton Color="@colors.BackgroundAccent"><Acadeicon Color="@colors.Text.Primary" Icon="Acadeicon.IconType.Book" /> Guides</Acadebutton>
    </aside>
    <main class="content">
        @Body
    </main>
</div>

@code {
    private string border => $"border-right:  2px dashed {colors.Primary}94";


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            theme.IsDarkMode = await theme.IsBrowserDarkMode();
            await theme.ListenForThemeChanges();
        }
    }

    protected override void OnInitialized()
    {
        theme.OnChange += StateHasChanged;
    }
}